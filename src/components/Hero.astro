---
import heroImage from '@assets/images/hero.webp';
import Button from '@components/ui/Button.astro';
import { Image } from 'astro:assets';
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
		<div>
			<h1 class="mb-10 font-monospace text-3xl text-black dark:text-white lg:text-5xl">
				Hola! Mi nombre es <span class="text-orange">Carlos Hernandez</span> y soy un desarrollador backend 
				en El Salvador.
			</h1>
		</div>
		<!-- modificar mas tarde -->
		<div class="mb-10">
			<Button style={'primary'} size={'lg'} class={'flex'} name="learn more">Mas sobre mi</Button>
		</div>
	</div>
	<div data-testid="hero-img" class="mb-10 flex w-1/2 items-center justify-center">
		<Image
			src={heroImage}
			alt="Coding girl"
			format="png"
			width={550}
			height={550}
			loading="eager"
		/>
	</div>
</section>
