---
interface Skill {
  name: string;
  icon: string;
}

const backendSkills: Skill[] = [
  { name: "NodeJS", icon: "/icons/node.svg" },
  { name: "Java", icon: "/icons/java.png" },
  { name: "C#", icon: "/icons/cshar.webp" },
  { name: "MySQL", icon: "/icons/mysql.png" },
  { name: "Spring Boot", icon: "/icons/springboot.png" },
  { name: "TypeScript", icon: "/icons/typescript.png" },
  { name: "NestJS", icon: "/icons/nestjs.svg"},
  { name: "SQL", icon: "/icons/sql.png"}
];

const frontendSkills: Skill[] = [
  { name: "JavaScript", icon: "/icons/js.png" },
  { name: "HTML", icon: "/icons/html.png" },
  { name: "CSS", icon: "/icons/csc.png" },
  { name: "Tailwind CSS", icon: "/icons/tailwind.png" },
  { name: "NextJS", icon: "/icons/nextjs.png" },
];

const toolsSkills: Skill[] = [
  { name: "GitHub", icon: "/icons/github.png" },
  { name: "Azure DevOps", icon: "/icons/azure.png" },
  { name: "Git", icon: "/icons/git.png" },
];
---

<section
  id="skills"
  class="py-20 bg-gray-100 dark:bg-gray-900 transition-colors duration-300"
>
  <div class="container mx-auto px-4 max-w-4xl">
    <h2 class="text-center text-3xl font-bold text-orange mb-16 font-monospace">
      Habilidades
    </h2>

    <div class="space-y-16">
      <div>
        <h3 class="text-2xl font-semibold text-black dark:text-white mb-8 text-center font-monospace">
          Backend
        </h3>
        <div class="flex flex-wrap justify-center gap-8">
          {backendSkills.map((skill) => (
            <div class="skill-item relative group">
              <div class="bg-white dark:bg-gray-800 p-4 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <img 
                  src={skill.icon || "/placeholder.svg"} 
                  alt={skill.name} 
                  class="h-16 w-16 object-contain"
                />
              </div>
              <div class="absolute -top-10 left-1/2 transform -translate-x-1/2 bg-orange px-3 py-1 rounded text-white text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap">
                {skill.name}
              </div>
            </div>
          ))}
        </div>
      </div>

      <div>
        <h3 class="text-2xl font-semibold text-black dark:text-white mb-8 text-center font-monospace">
          Frontend
        </h3>
        <div class="flex flex-wrap justify-center gap-8">
          {frontendSkills.map((skill) => (
            <div class="skill-item relative group">
              <div class="bg-white dark:bg-gray-800 p-4 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <img 
                  src={skill.icon || "/placeholder.svg"} 
                  alt={skill.name} 
                  class="h-16 w-16 object-contain"
                />
              </div>
              <div class="absolute -top-10 left-1/2 transform -translate-x-1/2 bg-orange px-3 py-1 rounded text-white text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap">
                {skill.name}
              </div>
            </div>
          ))}
        </div>
      </div>

      <div class="pb-20">
        <h3 class="text-2xl font-semibold text-black dark:text-white mb-8 text-center font-monospace">
          Herramientas <span class="text-orange">Relevantes</span>
        </h3>
        <div class="flex flex-wrap justify-center gap-8">
          {toolsSkills.map((skill) => (
            <div class="skill-item relative group">
              <div class="bg-white dark:bg-gray-800 p-4 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <img 
                  src={skill.icon || "/placeholder.svg"} 
                  alt={skill.name} 
                  class="h-16 w-16 object-contain"
                />
              </div>
              <div class="absolute -top-10 left-1/2 transform -translate-x-1/2 bg-orange px-3 py-1 rounded text-white text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap">
                {skill.name}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .font-monospace {
    font-family: 'Space Mono', monospace;
  }
</style>