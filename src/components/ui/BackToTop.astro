<button
  data-testId="back-to-top-button"
  type="button"
  aria-label="back to top button"
  data-mdb-ripple="true"
  data-mdb-ripple-color="light"
  id="btn-back-to-top"
  class="fixed bottom-5 left-5 z-50 inline-flex items-center justify-center rounded-full bg-black p-4 text-sm font-medium uppercase leading-tight shadow-md transition duration-150 ease-in-out hover:bg-orange hover:shadow-lg focus:outline-none focus:ring-0 dark:bg-orange dark:hover:bg-white dark:hover:text-black"
  style="display:none"
>
  <svg
    aria-hidden="true"
    focusable="false"
    data-prefix="fas"
    class="h-5 w-5"
    role="img"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 448 512"
  >
    <path
      fill="currentColor"
      d="M34.9 289.5l-22.2-22.2c-9.4-9.4-9.4-24.6 0-33.9L207 39c9.4-9.4 24.6-9.4 33.9 0l194.3 194.3c9.4 9.4 9.4 24.6 0 33.9L413 289.4c-9.5 9.5-25 9.3-34.3-.4L264 168.6V456c0 13.3-10.7 24-24 24h-32c-13.3 0-24-10.7-24-24V168.6L69.2 289.1c-9.3 9.8-24.8 10-34.3.4z"
    ></path>
  </svg>
</button>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mybutton = document.getElementById('btn-back-to-top');
    if (!mybutton) return;

    const toggleBtn = () => {
      if (window.scrollY > 200) {
        mybutton.style.display = 'inline-flex';
      } else {
        mybutton.style.display = 'none';
      }
    };

    window.addEventListener('scroll', toggleBtn, { passive: true });
    toggleBtn(); 

    mybutton.addEventListener('click', (e) => {
      e.preventDefault();
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  });
</script>
